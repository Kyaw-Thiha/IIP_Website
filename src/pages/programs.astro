---
import { changeLanguage } from "i18next";
import Layout from "../layouts/Layout.astro";
import Button from "../components/Common/Button.astro";

changeLanguage("en");

interface Program {
  name: string;
  text: string;
  image: string;
  link: string;
  reverse: boolean;
}
const programs: Program[] = [
  {
    name: "IGCSE",
    text: "Class for kiddos,if you hear bad violin playing, yep thats them.",
    image: "/images/graduation_2022.png",
    link: "",
    reverse: false,
  },
  {
    name: "Year 1-9",
    text: "This is class for IGCSE. Idk what else to write. Somebody replace this text.",
    image: "/images/graduation_2022.png",
    link: "",
    reverse: true,
  },
  {
    name: "A Levels",
    text: "This is the best class in the school. All hail Alvls. Somebody replace this text.",
    image: "/images/graduation_2022.png",
    link: "",
    reverse: false,
  },
];
---

<Layout title="Programs | IIP">
  <main>
    {
      programs.map((program) => (
        <div
          class={`flex ${program.reverse ? "flex-row-reverse" : "flex-row"}`}
        >
          <div class=" flex-1">
            <div class="IGtopic">
              <h2>{program.name}</h2>
            </div>
            <div class="IGbody">
              <h4>
                Class for kiddos,if you hear bad violin playing, yep thats them
              </h4>
            </div>
            <a href="#" class="btn">
              Enroll now{" "}
            </a>
          </div>
          <div class="h-80 flex-1">
            <img class="h-full" src={program.image} />
          </div>
        </div>
      ))
    }
  </main>
</Layout>

<style>
  .IGCSE_text {
    width: 50%;
    height: 100%;
  }

  .IGtopic {
    text-align: center;
    font-size: 30px;
    margin-left: auto;
    margin-bottom: 7%;
  }

  .IGbody {
    text-align: center;
    font-size: 20px;
    margin-left: 4%;
    margin-bottom: 8%;
  }

  .btn {
    outline: solid 3px #181f4b;
    background-color: #181f4b;
    color: white;
    padding: 10px 45px;
    margin-top: 10%;
    margin-left: 40%;
    text-decoration: none;
    border-radius: 15%;
  }

  .IG {
    display: flex;
  }

  .IG_pic {
    width: 100%;
    height: 100%;
  }
</style>
