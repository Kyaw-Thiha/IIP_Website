---
import { changeLanguage } from "i18next";
import Admission from "@layouts/Admission.astro";
import Layout from "@layouts/Layout.astro";

changeLanguage("en");
---

<Layout title="Year 1 to 7 Admission | IIP">
  <Admission title="Year 1 to 7 Admission" active="year-1_to_7" link="">
    <div>
      <div class="mt-12 flex gap-x-11">
        <div class="flex-[0.7]">
          <!--first box-->
          <div class="">
            <div class="ml-6 h-1/2 rounded-xl bg-gray-300">
              <p>
                <ul class="ml-9 list-disc p-7">
                  <li class="mb-5">Must be in age of 4 and above</li>
                  <ul class="ml-9 list-decimal"></ul>
                  <li class="mb-2">Primary School</li>
                </ul>
              </p>
            </div>
          </div>
          <!--second box -->
          <div class="mt-8 ml-6 rounded-xl bg-gray-300 p-7">
            <p class="ml-4">School fees - $500</p>
            <p class="ml-4">
              Campus - 27, Thiri Min Galar Street,Kamaryut Township,Yangon
            </p>
            <p class="ml-4">Dress Code- Uniform</p>
            <p class="ml-4">curriculum - British</p>
            <p class="ml-4">Duration - 1 semester per year</p>
          </div>
        </div>

        <div class="flex-1">
          <img src="/images/logo.png" alt="" class="h-full object-cover" />
        </div>
      </div>
    </div>
  </Admission>
</Layout>
