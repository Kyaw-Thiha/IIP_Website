---
//Importing the global css
import "../styles/global.css";

import i18next from "i18next";

import Footer from "../components/Footer.astro";
import NavBar from "../components/NavBar.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang={i18next.language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- Google Fonts -->
    <!-- Lato & Merriweather -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Merriweather:wght@300;400;700&family=Open+Sans:wght@300;400;700&display=swap"
      rel="stylesheet"
    />

    <!-- Fontawesome icons library -->
    <!-- <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/fontawesome.min.css"
      /> -->

    <!-- Flag Library -->
    <!-- https://github.com/lipis/flag-icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/gh/lipis/flag-icons@6.6.6/css/flag-icons.min.css"
    />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Welcome to the Institute of International Professionalism, a renowned educational institution offering IGCSE and iAL programs. We are proudly accredited by Edexcel and CIE, ensuring a high standard of academic excellence. Join us to experience top-quality education that prepares students for success in their chosen fields."
    />
    <meta
      name="keywords"
      content="Institute of International Professionalism, IIP School, IGCSE, iAL, Edexcel accredited, CIE accredited, international education, academic excellence, holistic learning, qualified faculty, student success"
    />
    <meta name="robots" content="index,follow" />

    <!-- OG Tags -->
    <meta
      property="og:title"
      content="Institute of International Professionalism"
    />
    <meta property="og:type" content="website" />
    <!-- <meta property="og:url" content="https://www.imdb.com/title/tt0117500/" /> -->
    <meta property="og:image" content="/images/logo.png" />

    <title>{title}</title>
  </head>
  <body>
    <NavBar />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
  }

  html {
    background-color: #f6f6f6;
  }

  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
</style>
