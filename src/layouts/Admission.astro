---
import Button from "@components/Common/Button.astro";

export interface Props {
  title: string;
  active: "year-1_to_7" | "year-8_to_9" | "igcse" | "a-level";
  link: string;
}

const { title, active, link } = Astro.props;
---

<div>
  <h2>{title}</h2>
  <div class="flex">
    <div>Year 1 to 7</div>
    <div>Year 8 to 9</div>
    <div>IGCSE</div>
    <div>A Level</div>
  </div>
  <slot />
  <div class="mt-20 flex items-center justify-center">
    <Button class="rounded-2xl py-3 px-56" href={link} label="Apply Now" />
  </div>
</div>
