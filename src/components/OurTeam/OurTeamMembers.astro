---
import MemberCard from "./MemberCard.astro";
import type { ImageMetadata } from "astro";
import { t } from "i18next";

import HninOoWaiLwinImage from "@assets/our-team/hnin-oo-wai.jpg";
import HninPwintShweYieImage from "@assets/our-team/hnin-pwint-shwe-yie.jpg";
import HtutMyatMinImage from "@assets/our-team/htut-myat-min.jpg";
import KyawThihaImage from "@assets/our-team/kyaw-thiha.jpg";
import MinThihaChitImage from "@assets/our-team/min-thiha-chit.jpg";
import MayThuThuImage from "@assets/our-team/may-thu-thu.jpg";
import OneOneImage from "@assets/our-team/one-one.jpg";
import YadanarImage from "@assets/our-team/yadanar.jpg";

interface TeamMember {
  name: string;
  image: ImageMetadata;
  quote: string;
}

const members: Array<TeamMember> = [
  {
    name: "Hnin Oo Wai Lwin",
    image: HninOoWaiLwinImage,
    quote: `"Met my other chaotic half in them"`,
  },
  {
    name: "Hnin Pwint Shwe Yie",
    image: HninPwintShweYieImage,
    quote: `"Don't worry, you will struggle. Look at me. Peace"`,
  },
  {
    name: "Htut Myat Min",
    image: HtutMyatMinImage,
    quote: `"Who needs a degree when you're schooling life?"`,
  },
  {
    name: "Kyaw Thiha @ Kevin",
    image: KyawThihaImage,
    quote: `const name = ['K', 'e', 'v', 'i', 'n']\nconsole.log(name.join(''))`,
  },
  {
    name: "Min Thiha Chit",
    image: MinThihaChitImage,
    quote: `"I don't think I'll forget Kevin's yar yar yar and oggly oggly"`,
  },
  {
    name: "May Thu Thu @ Helen",
    image: MayThuThuImage,
    quote: `"We go jim"`,
  },
  {
    name: "One One",
    image: OneOneImage,
    quote: `"Bold of you to assume one plus one always makes two tsk tsk"`,
  },
  {
    name: "Yadanar",
    image: YadanarImage,
    quote: `"Hv fun suffering ~"`,
  },
];
---

<div class="mt-12">
  <div class="mx-4 md:mx-12">
    <h2 class="mb-8 text-center text-4xl md:text-6xl">
      {t("our-team:members.title")}
    </h2>
    <p class="text-justify text-lg leading-loose md:text-xl md:leading-loose">
      {t("our-team:members.text")}
    </p>
  </div>

  <div class="mt-8">
    <img class="bg-img hidden lg:block" src="/images/our-team/bg.png" alt="" />
    <div
      class="vertical-center grid grid-cols-1 content-stretch gap-4 py-8 text-center md:grid-cols-4"
    >
      {
        members.map((member) => (
          <MemberCard
            image={member.image}
            name={member.name}
            quote={member.quote}
          />
        ))
      }
    </div>
  </div>
</div>

<style>
  .bg-img {
    width: 100%;
    height: 100%;
    position: absolute;
    opacity: 60%;
    z-index: -10;
  }
</style>
