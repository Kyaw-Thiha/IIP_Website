---
import Image from "@components/Common/Image.astro";
import type { ImageMetadata } from "astro";

export interface Props {
  image: ImageMetadata;
  name: string;
  quote: string;
}

const { image, name, quote } = Astro.props;
---

<div class="p-6">
  <Image src={image} alt=`Image of ${name}` height={400} />
  <p class="text-xl font-semibold leading-loose md:text-2xl md:leading-loose">
    {name}
  </p>
  <p class="text-base">{quote}</p>
</div>
