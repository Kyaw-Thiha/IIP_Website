      class="mb-0 mr-0 flex items-center justify-center gap-2 md:mb-2 md:mr-4 md:gap-4"
    >
      <div class="mr-0 flex md:mr-3">
        <div
          class="text-md mx-2 hidden items-center text-center md:flex md:text-xl"
        >
          <Link color="white" href="">Home</Link>
        </div>
        <div
          class="text-md mx-2 hidden items-center text-center md:flex md:text-xl"
        >
          <Link color="white" href="about-us">About Us</Link>
        </div>
        <div
          class="text-md mx-2 hidden items-center text-center md:flex md:text-xl"
        >
          <Link color="white" href="programs">Programs</Link>
        </div>
        <div class="text-md mx-2 flex items-center text-center md:text-xl">
          <Link color="white" href="admission/igcse">Admissions</Link>
        </div>
        <div class="text-md mx-2 flex items-center text-center md:text-xl">
          <Link color="white" href="contact-us">Contact Us</Link>
        </div>
      </div>

      <div class="mr-2 flex items-center justify-center">
        <LanguageSelector />
      </div>
    </div>
  </div>
</div>

