    <div class="flex items-center justify-center">
      <Link href="/" class="flex items-center hover:no-underline">
        <Image
          src={Logo}
          alt="Logo"
          width={150}
          height={130}
          class="hidden flex-[0.1] md:block"
        />

        <h1 class="flex-1 text-center text-2xl md:text-5xl md:leading-normal">
          Institute of International Professionalism
        </h1>
