---
//Please read about image plugin from here - https://astro-imagetools-docs.vercel.app/en/usage
import Link from "../Common/Link.astro";
---

<section class="mb-28">
  <div class="title">Alumni</div>
  <div class="see-more">
    <Link href="">
      See all <i class="fa-solid fa-greater-than"></i>
    </Link>
  </div>

  <div class="alumni-flex">
    <div class="alumni-image">
      <img src="/images/logo.png" />
    </div>
    <div class="alumni-image text-center">
      <img src="/images/logo.png" />
    </div>
    <div class="alumni-image text-center">
      <img src="/images/logo.png" />
    </div>
    <div class="alumni-image text-center">
      <img src="/images/logo.png" />
    </div>
  </div>
</section>

<style>
  .title {
    margin-left: 12%;
    font-size: 3.75rem;
    font-weight: 700;
    color: #f29023;
    display: inline;
  }

  .see-more {
    color: #ed9127;
    padding-left: 7px;
    display: inline;
  }

  .see-more:hover {
    text-decoration: underline;
  }

  .alumni-flex {
    display: flex;
    flex-direction: row;
    text-align: center;
    width: 80%;
    margin: 0 auto;
    align-items: center;
    justify-content: center;
  }

  .alumni-image {
    flex: auto;
    padding: 20px 30px 30px 30px;
  }

  .alumni-image img {
    width: 250px;
    border-radius: 30px;
    display: inline-block;
    text-align: center;
  }

  @media (max-width: 800px) {
    .alumni-flex {
      flex-direction: column;
    }
  }
</style>
