---
//Please read about image plugin from here - https://astro-imagetools-docs.vercel.app/en/usage
import Link from "@components/Common/Link.astro";
import { t } from "i18next";
---

<section class="mb-8 min-h-[40vh] md:mb-0">
  <div
    class="mb-4 text-center text-4xl font-bold leading-normal text-secondary md:mb-12 md:text-6xl"
  >
    {t("home:alumni.title")}
  </div>
  <div class="m-auto mx-[8vw]">
    <div class="alumni-flex">
      <div class="alumni-image">
        <img src="/images/logo.png" />
      </div>
      <div class="alumni-image text-center">
        <img src="/images/logo.png" />
      </div>
      <div class="alumni-image text-center">
        <img src="/images/logo.png" />
      </div>
    </div>
  </div>
  <div class="m-auto mx-[12vw] text-blue-700">
    <Link href="/alumni">{t("home:alumni.linkLabel")}</Link>
  </div>
</section>

<style>
  .title {
    /* margin-left: 12%; */
    font-size: 3.75rem;
    font-weight: 700;
    color: #f29023;
    display: inline;
  }

  .see-more {
    padding-left: 7px;
    display: inline;
  }

  .see-more:hover {
    text-decoration: underline;
  }

  .alumni-flex {
    display: flex;
    flex-direction: row;
    text-align: center;
    margin: 0 auto;
    align-items: center;
    justify-content: center;
  }

  .alumni-image {
    flex: auto;
    padding: 20px 30px 30px 30px;
  }

  .alumni-image img {
    width: 300px;
    border-radius: 30px;
    display: inline-block;
    text-align: center;
  }

  @media (max-width: 800px) {
    .alumni-flex {
      flex-direction: column;
    }
  }
</style>
