---
import Button from "@components/Common/Button.astro";
import { t } from "i18next";

interface Program {
  name: string;
  text: string;
  link: string;
  background: string;
}

const programs: Program[] = [
  {
    name: "Year 1-9",
    text: t("home:programs.Year 1-9"),
    link: "/curriculum/year-1_to_9/overview",
    background: "bg-primary",
  },
  {
    name: "IGCSE",
    text: t("home:programs.IGCSE"),
    link: "/curriculum/igcse/overview",
    background: "bg-secondary",
  },
  {
    name: "A Levels",
    text: t("home:programs.A-Level"),
    link: "/curriculum/a-level/overview",
    background: "bg-primary",
  },
];
---

<!-- The 3 different programs -->
<div class="mx-4 flex min-h-[40vh] items-center justify-center md:mx-0">
  <div
    class="m-auto flex flex-col flex-wrap items-center justify-center gap-x-4 gap-y-8 md:flex-row"
  >
    {
      programs.map((program) => (
        <div class="flex-direction md:w-[400px]">
          <div
            class={`${program["background"]} ${
              program["background"] == "bg-primary"
            } rounded-md border-4 border-black px-5 py-2 text-center`}
          >
            <h3
              class={`mb-4 text-3xl leading-normal md:text-5xl lg:mb-0 ${
                program["background"] == "bg-primary"
                  ? "text-white"
                  : "text-black"
              }`}
            >
              {program["name"]}
            </h3>

            <p
              class={`text-md flex min-h-[200px] items-center justify-center text-center leading-loose md:text-xl md:leading-loose ${
                program["background"] == "bg-primary"
                  ? "text-white"
                  : "text-black"
              }`}
            >
              {program["text"]}
            </p>

            <div class="my-3 flex items-center justify-center">
              {program["background"] == "bg-primary" ? (
                <Button
                  label="Enroll Now"
                  href={program["link"]}
                  class="w-16 px-2 py-1"
                  outlined
                />
              ) : (
                <div class="border-1 border-bl">
                  <Button
                    label="Enroll Now"
                    secondary
                    href={program["link"]}
                    outlined
                    textColor="black"
                    class="w-16 px-2 py-1"
                  />
                </div>
              )}
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  @media (max-width: 800px) {
    .flex-direction {
      flex-direction: column;
      padding: 20px 0px 20px 0px;
    }
  }
</style>
