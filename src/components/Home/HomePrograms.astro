---
import Button from "../Common/Button.astro";
import { t } from "i18next";

interface Program {
  name: string;
  text: string;
  link: string;
}

const programs: Program[] = [
  {
    name: "IGCSE",
    text: t("home:programs.IGCSE"),
    link: "",
  },
  {
    name: "Year 1-9",
    text: t("home:programs.Year 1-9"),
    link: "",
  },
  {
    name: "A Levels",
    text: t("home:programs.A-Level"),
    link: "",
  },
];
---

<!-- The 3 different programs -->
<div
  class="flex-direction m-auto mt-12 mb-12 flex w-4/5 items-center justify-center"
>
  {
    programs.map((program) => (
      <div class="h-[300px] w-[400px] ">
        <div class="bg-primary mx-5 rounded-md px-5 py-4">
          <h3 class="text-white">{program["name"]}</h3>

          <p class="flex min-h-[150px] items-center justify-center text-center text-white">
            {program["text"]}
          </p>

          <div class="mb-3 flex items-center justify-center">
            <Button
              label="Enrol Now"
              secondary
              href={program["link"]}
              class="w-16 rounded-xl p-4 "
            />
          </div>
        </div>
      </div>
    ))
  }
</div>

<style>
  @media (max-width: 800px) {
    .flex-direction {
      flex-direction: column;
    }
  }
</style>
