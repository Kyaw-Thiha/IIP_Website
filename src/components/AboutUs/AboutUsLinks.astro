    <h1 class="text-2xl md:text-3xl"><b>{t("about-us:links.title")}</b></h1>
    <div class="mt-5 flex flex-col gap-4 text-[20px] text-lg md:text-xl">
      <Link class="text-blue-700 hover:text-secondary" href="alumni">
        {t("about-us:links.alumni")}
      </Link>
      <Link class="text-blue-700 hover:text-secondary" href="programs">
        {t("about-us:links.programs")}
      </Link>
      <Link class="text-blue-700 hover:text-secondary" href="announcement">
        {t("about-us:links.announcements")}
      </Link>
      <Link class="text-blue-700 hover:text-secondary" href="admission/igcse">
