<style>
  * {
    box-sizing: border-box;
  }

  h1 {
    margin-left: 70px;
  }

  .column {
    float: left;
    width: 33.33%;
    padding: 5px;
    align-items: center;
    justify-content: center;
    display: flex;
  }

  .aaa {
    width: 400px;
    height: 400px;
    border-radius: 50%;
    background-image: url(/images/founders/aye-aye-aung-1.jpg);
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    border: 10px solid #181f4b;
  }

  .kyaw-thiha {
    width: 400px;
    height: 400px;
    border-radius: 50%;
    background-image: url(/images/founders/kyaw-thiha.jpg);
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    border: 10px solid #181f4b;
  }

  .mtm {
    width: 400px;
    height: 400px;
    border-radius: 50%;
    background-image: url(/images/founders/myat-thit-mon-1.jpg);
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    border: 10px solid #181f4b;
  }

  img {
    width: 100%;
  }

  /* Clearfix (clear floats) */
  .row::after {
    content: "";
    clear: both;
    display: table;
  }

  .row {
    width: 100%;
    flex-wrap: nowrap;
  }

  @media screen and (max-width: 1240px) {
    .column {
      width: 100%;
    }
  }
