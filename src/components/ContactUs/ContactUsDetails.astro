---
import Link from "@components/Common/Link.astro";

import { t } from "i18next";
---

<section>
  <h2
    class="bg-primary pb-12 pt-8 text-center text-4xl font-bold text-white md:text-6xl lg:mx-8"
  >
    {t("contact-us:title")}
  </h2>
  <div
    class="flex flex-col flex-wrap items-center justify-center gap-12 bg-primary py-8 md:flex-row lg:mx-8"
  >
    <!--Call us -->
    <div
      class="flex-direction vertical-center flex h-[300px] w-[300px] flex-col items-center justify-center rounded-3xl bg-white text-center lg:h-[400px] lg:w-[400px]"
    >
      <img
        src="https://img.icons8.com/plasticine/100/null/phone.png"
        alt="Phone Image"
        class="mr-1 inline-block"
        width="40"
        height="40"
      />
      <p class="text-3xl font-semibold leading-loose">
        {t("contact-us:details.phone.title")}
      </p>
      <p class="mb-0.5">{t("contact-us:details.phone.text-1")}</p>
      <p class="mb-0.5">{t("contact-us:details.phone.text-2")}</p>
      <p class="mb-0.5">{t("contact-us:details.phone.text-3")}</p>
    </div>
    <!--Visit -->
    <div
      class="flex-direction vertical-center flex h-[300px] w-[300px] flex-col items-center justify-center rounded-3xl bg-white text-center lg:h-[400px] lg:w-[400px]"
    >
      <p class="mb-1 text-4xl">🏫</p>
      <p class="text-3xl font-semibold leading-loose">
        {t("contact-us:details.address.title")}
      </p>
      <p class="mb-0.5 p-2">
        {t("contact-us:details.address.text")}
      </p>
    </div>
    <!--mail -->
    <div
      class="flex-direction vertical-center flex h-[300px] w-[300px] flex-col items-center justify-center rounded-3xl bg-white text-center lg:h-[400px] lg:w-[400px]"
    >
      <p class="text-4xl">✉️</p>
      <p class="text-3xl font-semibold leading-loose">
        {t("contact-us:details.email.title")}
      </p>
      <p class="mb-0.5">
        <Link href="mailto:info@iprofessionalism.com">
          {t("contact-us:details.email.text-1")}
        </Link>
      </p>
      <p class="mb-0.5">{t("contact-us:details.email.text-2")}</p>
      <p class="mb-0.5">
        <Link href="mailto:iipexam3@iipschool.edu.mm">
          {t("contact-us:details.email.text-3")}
        </Link>
      </p>
    </div>
  </div>
</section>
